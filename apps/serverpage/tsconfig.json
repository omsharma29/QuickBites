{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./api/*.ts",
    "src/**/*"
  ]
}