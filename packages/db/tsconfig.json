{

  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "NodeNext",           // Use ES modules
    "target": "ES2020",           // Adjust this based on your Node.js version
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "strict": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}