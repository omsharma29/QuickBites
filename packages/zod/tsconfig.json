{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "NodeNext",           // Use ES modules
    "target": "ES2020",           // Adjust this based on your Node.js version
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "strict": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "dist"]
}