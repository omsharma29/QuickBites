{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "NodeNext",        // Changed from ESNext to NodeNext
    "target": "ESNext",           // Adjust this based on your Node.js version
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "dist"]
}